package varios; 
public class Piramide {
    public static void main(String[] args) {
        int filas = 5; 
        for (int i = 1; i <= filas; i++) {
            
            for (int j = i; j < filas; j++) {
                System.out.print("  ");
            }
            
            for (int k = 1; k <= i; k++) {
                System.out.print("* ");
            }

            System.out.println();
        }
    }
}
